#!/usr/bin/env php
<?php

    require(__DIR__ . "/../includes/config.php");
    // two command line arguments
    if ($argc != 2)
    {
        print("Specify path to file");
        return -1;
    }
    // check that file exists
    $file = $argv[1];
    if (!file_exists($file))
    {
        print("Sorry, your file {$file} does not exist!");
        return -1;
        
    } else if (!is_readable($file))
    {
        print("Sorry, your file {$file} is not readable!");
        return -1;
    } else
    // file exists and is readable
    {
        $file_p = fopen($file, "r");
        // if file cannot be opened
        if (!$file_p)
        {
            print("unable to open and read " .$file);
            return -1;
        }
        while(($row = fgetcsv($file_p, 0, "\t")) != null)
        {
            $insert = CS50::query("INSERT INTO places (country_code, postal_code, place_name, admin_name1, admin_code1, admin_name2, admin_code2, admin_name3, admin_code3, latitude, longitude, accuracy) 
            VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)", 
            $row[0], $row[1], $row[2], $row[3], $row[4], $row[5], $row[6], $row[7], $row[8], $row[9], $row[10], $row[11]);
        
            if(!$insert)
            {
                print("error inserting row into table");
            }
        }
        // close file
        fclose($file_p);
    }    
?>